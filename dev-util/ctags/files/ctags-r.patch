+*
+*   This module contains functions for generating tags for R language
+*   files.
+*
+*   INCLUDE FILES
+*/
+
+#include "general.h"    /* always include first */
+
+#include <string.h>     /* to declare strxxx() functions */
+#include <ctype.h>      /* to define isxxx() macros */
+
+#include "parse.h"      /* always include */
+#include "read.h"       /* to define file fileReadLine() */
+
+/* DATA DEFINITIONS */
+typedef enum eRKinds {
+    K_LIBRARY, K_FUNCTION
+} RKind;
+
+static kindOption RKinds [] = {
+    { TRUE, 'l', "library", "libraries" },
+    { TRUE, 'f', "function", "functions" }
+};
+
+/* FUNCTION DEFINITIONS */
+
+static void findRTags (void)
+{
+    vString *name = vStringNew ();
+    const unsigned char *line;
+
+    while ((line = fileReadLine ()) != NULL)
+    {
+        /* Look for a line beginning with "def" followed by name */
+        if (strncmp ((const char*) line, "library", (size_t) 7) == 0  &&
+            isspace ((int) line [8]))
+        {
+            const unsigned char *cp = line + 4;
+            while (isspace ((int) *cp))
+                ++cp;
+            while (isalnum ((int) *cp)  ||  *cp == '_')
+            {
+                vStringPut (name, (int) *cp);
+                ++cp;
+            }
+            vStringTerminate (name);
+            makeSimpleTag (name, RKinds, K_LIBRARY);
+            vStringClear (name);
+        }
+    }
+    vStringDelete (name);
+}
+
+/* Create parser definition stucture */
+extern parserDefinition* RParser (void)
+{
+    static const char *const extensions [] = { "R", "Rnw", "r", NULL };
+    parserDefinition* def = parserNew ("R");
+    def->kinds      = RKinds;
+    def->kindCount  = KIND_COUNT (RKinds);
+    def->extensions = extensions;
+    def->parser     = findRTags;
+    return def;
+}
